@model IEnumerable<MVC_HomeWork.Models.客戶資料>

@{
    ViewBag.Title = "Index";
}

<h2>
    @Html.ActionLink("表單首頁", "Index") 
</h2>

<p>
    @Html.ActionLink("創建新資料", "Create") |
    @Html.ActionLink("顯示已刪除資料", "Delete_View")
</p>

<p>
    <form align="right" action="/客戶資料/Index" method="get">
        @Html.DropDownList("dropDownList", new SelectList(new string[] { "一般客戶", "付費客戶", "VIP客戶", "顯示全部分類" }))
        <input type="submit" value="篩選" />
    </form>
</p>

<p>
    <form align="right" action="/客戶資料/Index" method="get">
        以客戶姓名搜尋：<input type="search" name="keyword" />
        <input type="submit" value="搜尋" />
    </form>
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.客戶名稱)
            <br />
            @Html.ActionLink("升冪", "StoSort", new { id = 1 })|
            @Html.ActionLink("降冪", "StoSort_desc", new { id = 1 })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.統一編號)
            <br />
            @Html.ActionLink("升冪", "StoSort", new { id = 2 })|
            @Html.ActionLink("降冪", "StoSort_desc", new { id = 2 })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.電話)
            <br />
            @Html.ActionLink("升冪", "StoSort", new { id = 3 })|
            @Html.ActionLink("降冪", "StoSort_desc", new { id = 3 })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.傳真)
            <br />
            @Html.ActionLink("升冪", "StoSort", new { id = 4 })|
            @Html.ActionLink("降冪", "StoSort_desc", new { id = 4 })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.地址)
            <br />
            @Html.ActionLink("升冪", "StoSort", new { id = 5 })|
            @Html.ActionLink("降冪", "StoSort_desc", new { id = 5 })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
            <br />
            @Html.ActionLink("升冪", "StoSort", new { id = 6 })|
            @Html.ActionLink("降冪", "StoSort_desc", new { id = 6 })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.客戶分類)
            <br />
            @Html.ActionLink("升冪", "StoSort", new { id = 7 })|
            @Html.ActionLink("降冪", "StoSort_desc", new { id = 7 })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.客戶名稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.統一編號)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.電話)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.傳真)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.地址)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.客戶分類)
            </td>
            <td>
                @Html.ActionLink("編輯", "Edit", new { id = item.Id }) |
                @Html.ActionLink("詳細資料", "Details", new { id = item.Id }) |
                @Html.ActionLink("刪除", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
