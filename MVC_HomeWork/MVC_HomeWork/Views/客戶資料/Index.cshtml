@model IEnumerable<MVC_HomeWork.Models.客戶資料>

@{
    ViewBag.Title = "Index";
}

<h2>
    @Html.ActionLink("表單首頁", "Index")
</h2>

<p>
    @Html.ActionLink("創建新資料", "Create") |
    @Html.ActionLink("顯示已刪除資料", "Delete_View") |
    @Html.ActionLink("匯出Excel資料", "Export")
    @*<div class="well">
            <button class="btn btn-primary" id="ButtonExport" name="ButtonExport">
                匯出Excel資料
            </button>
        </div>*@
</p>

<p>
    <form align="right" action="/客戶資料/Index" method="get">
        @*  @Html.DropDownList("dropDownList", new SelectList(new string[] { "顯示全部分類","一般客戶", "付費客戶", "VIP客戶"  }))*@
        @Html.DropDownList("dropDownList", (SelectList)ViewBag.categoryList)
        <input type="submit" value="篩選" />
    </form>
</p>

<p>
    <form align="right" action="/客戶資料/Index" method="get">
        以客戶姓名搜尋：<input type="search" name="keyword" />
        <input type="submit" value="搜尋" />
    </form>
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.客戶名稱)
            <br />
            @Html.ActionLink("升冪", "StoSort", new { id = 1 })|
            @Html.ActionLink("降冪", "StoSort", new { id = 11 })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.統一編號)
            <br />
            @Html.ActionLink("升冪", "StoSort", new { id = 2 })|
            @Html.ActionLink("降冪", "StoSort", new { id = 22 })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.電話)
            <br />
            @Html.ActionLink("升冪", "StoSort", new { id = 3 })|
            @Html.ActionLink("降冪", "StoSort", new { id = 33 })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.傳真)
            <br />
            @Html.ActionLink("升冪", "StoSort", new { id = 4 })|
            @Html.ActionLink("降冪", "StoSort", new { id = 44 })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.地址)
            <br />
            @Html.ActionLink("升冪", "StoSort", new { id = 5 })|
            @Html.ActionLink("降冪", "StoSort", new { id = 55 })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
            <br />
            @Html.ActionLink("升冪", "StoSort", new { id = 6 })|
            @Html.ActionLink("降冪", "StoSort", new { id = 66 })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.客戶分類)
            <br />
            @Html.ActionLink("升冪", "StoSort", new { id = 7 })|
            @Html.ActionLink("降冪", "StoSort", new { id = 77 })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.客戶名稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.統一編號)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.電話)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.傳真)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.地址)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.客戶分類)
            </td>
            <td>
                @Html.ActionLink("編輯", "Edit", new { id = item.Id }) |
                @Html.ActionLink("詳細資料", "Details", new { id = item.Id }) |
                @Html.ActionLink("刪除", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

