<p>
    <form id="Form_Login">
        <ul style="list-style-type: none;">
            <li>
                @Html.Label("Account：")
                @Html.TextBox("Account", "", new { id = "TextBox_Account" })
            </li>
            <li>
                @Html.Label("Password：")
                @Html.Password("Password", "", new { id = "TextBox_Password" })
            </li>
            <li>
                <input type="button" value="送出" id="ButtonSubmit" />
                <input type="reset" value="清除" />
            </li>
        </ul>
    </form>
</p>

