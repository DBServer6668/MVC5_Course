            var postData = $('#Form_Login').serialize();
            $.ajax({
                url: '@(Url.Action("AlertPost", "Home"))',
                type: "POST",
                data: postData,
                dataType: "json",
                async: false,
                cache: false,
                success: function (data) {
                    if (data) {
                        if (!data.result) {
                            alert(data.msg);
                        }
                        else {
                            $('#TextBox_Account').val('');
                            $('#TextBox_Password').val('');
                            alert(data.msg + ' 登入完成');
                        }
                    }
                    else {
                        alert('沒有回傳');
                    }
                }
            });
